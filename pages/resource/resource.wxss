/* 搜索 */
page{padding-bottom: 100rpx;}
.search .input-item{background-color: #1E2887;}
picker{width: 5em;}
.picker{color: white;margin-right: 0;}
.search{width: 100%;padding: 3rpx 0;}
.search input {padding-left: 2em;background: #1E2887;color: #ccc;line-height: 50rpx;}
.warp{overflow: hidden;zoom: 1;background: #1E2887;position: relative;z-index: 1;}
.content-warp{padding: 20rpx;}
.content-warp+.content-warp{padding-top: 20rpx;}
.search-warp{padding: 20rpx 0;}
.stripe-right{z-index: 0;}
.bg-normal{z-index: 1;position: relative;}
.container{z-index: 1;position: relative;}
.bg-dark{background: #1E2887;}
.tab-warp{position: absolute;height: 100%;width: 100%;margin: 0;}
.content-warp-fullCol .icon-sm{width: 10rpx;height: 10rpx;}
.pic-full{height: 400rpx;}
/* 内容 */
.resource{margin-bottom: 50rpx;}
.content{margin-top: 20rpx;}