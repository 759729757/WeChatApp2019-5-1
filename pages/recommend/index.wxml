<!--pages/推荐供应商-->
<view class='stripe stripe-right'></view>
<view class=' float-warp'>
   <view class='content-warp part-title-warp '>
      <view class='item-5'>
        <text class='part-title'>推荐供应商</text>
        <text class='small'>Recommended supplier</text>
      </view>
      <view class='item-5'>
        <view class='pull-right'>
          <view class='table-cell search'>
            <view class='input-item '>
              <input placeholder='供应商搜索'></input>
              <image class='icon icon-search' src='/images/enter.png'></image>
            </view>
        </view>
      </view>
    </view>
  </view>
</view>

<view>
  <view class='item-5'>
      <view wx:for="{{list2}}" wx:key class='item'>
        <image class='pic' src="{{item.image}}"></image>
         <view class='content'>
          <view class='text-normal'>{{item.name}}</view>
          <text class='text-yellow text-sm'>{{item.describe}}</text>
          <view class='text-content'>简介：{{item.detail}} <text class='text-yellow'>【展开】</text></view>
        </view>
      </view>
  </view>
  <view class='item-5 martop-100'>
       <view wx:for="{{list1}}" wx:key class='item'>
         <view class='content'>
          <view class='text-normal'>{{item.name}}</view>
          <text class='text-yellow text-sm'>{{item.describe}}</text>
          <view class='text-content'>简介：{{item.detail}} <text class='text-yellow'>【展开】             </text></view>
        </view>
        <image class='pic' src="{{item.image}}"></image>
      </view>
  </view>
</view>

