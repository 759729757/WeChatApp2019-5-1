swiper{height: 450rpx;}
swiper image{width: 100%;height: 100%;}
 
.banner{position: relative;}
.ban-title{position: absolute;top: 70rpx;left: 30rpx;color: white;font-size: larger;font-weight: bold;}
.ban-text{position: absolute;width: 100%;bottom: 0;left: 0;height: 3em;line-height: 3em;background-color: rgba(0,0,0,.25);color: white;padding: 0 30rpx;box-sizing: border-box;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.scroll-view-item_H{width: 100%;display: block;}
page{background-color: #0c0f2e;color: #ccc;}
.picker{background: #e4bb5f;border-radius: 20rpx;padding:10rpx;text-align:center;color:white;}
.recommend-type{display: inline-block;margin: 10rpx 0;color: #999;}
.recommend-type::after{content: "";border: 1rpx solid #999;height: .6em;display: inline-block}
.recommend-type text{margin: 0 1em;}
.recommend-type.active{color:#e4bb5f;font-size: large;font-weight: bold; }
.recommend-type.active text{border-bottom: 4rpx solid #e4bb5f;padding-bottom: 7rpx;letter-spacing: 5rpx;text-align: center;font-style: italic;}
.recommend-content{border-radius: 0 0 20rpx 20rpx;background-color: #181e50;color: #eee;padding-top: 35rpx;}
.recommend-warp{border-radius: 20rpx 20rpx 0 0;background-color: #090a26;}
.sub-title{font-size: larger;padding-left: 20rpx;}
.recommend-content .item{width: 100rpx;height: 100rpx;margin: 20rpx;display: inline-block;}
.recommend-content .item image{max-width: 100%;max-height: 100%;box-shadow: 0 0 10rpx 0rpx #eee;border-radius: 15rpx;}
.recommend-content .item text{text-align: center;max-width: 100%;display: block;white-space: nowrap;overflow: hidden;text-overflow: ellipsis;}
.content,.news-warp{border-radius: 20rpx;background-color: #181e50;}
.pro-warp .item{display: table;background: #090a26;margin-bottom: 20rpx;width: 100%;box-shadow: 0 0 10rpx 0 #2a3b81;box-sizing: border-box;overflow: hidden;}
.pro-image{position: relative;width: 300rpx;height: 250rpx;display: table-cell;border: none;}
.pro-image::after{content: '';position: absolute;width: 0;height: 0;right: 0;top: -200rpx;
 border-top: 100px solid transparent;
  border-left: 50px solid transparent;
  border-bottom: 200px solid  #0f1235;}
.pro-detail{background-color: #0f1235;display: table-cell;width: 55%;vertical-align:top;padding-top: 30rpx;padding-left: 10rpx;position: relative;}
.pro-title{font-size: large;color: white;font-weight: bold;display: block;}
.pro-title .small{font-size: 16rpx;color: #ccc;border-radius: 8rpx;border: 1rpx solid #ccc;padding: 2rpx 5rpx;}
.pro-tab{background: #de0b2c;color: white;border-radius: 10rpx;margin-right: 1em;font-size: 14rpx;padding: 4rpx 10rpx 4rpx;display: inline-block;vertical-align: middle;}
.pro-tab image,.pro-like image,.pro-like-btn image{width: 1.4em;height: 1.4em;display: inline-block;vertical-align: middle;}
.pro-like{position: absolute;bottom: 30rpx;left: 10rpx;color: #e4bb5f;font-size: 16rpx;vertical-align: middle;}
.pro-like-btn{position: absolute;bottom: 30rpx;right: 30rpx;color: #e4bb5f;font-size: 16rpx;vertical-align: middle;}
.subtitle{font-size: 30rpx;color: #e4bb5f;display: inline-block;padding: 2rpx 16rpx;border-radius: 8rpx;background: #2a3b81;margin-left: 20rpx;margin-bottom: 20rpx;}
.icon-search{position: absolute;left:24rpx;top: 20rpx;width: 1em;height: 1em;}

.media{display: flex;flex-direction: row;justify-content: baseline;}
.media .item{width: 204.333333rpx;margin: 15rpx;display: inline-block;font-weight: bold;color: #eee;}
.media .item image{height: 204rpx;box-shadow: 0 0 10rpx 0 #2a3b81;}
.hr .item{width: 94%;margin: 20rpx 3%;display: table;background-color: #0f1235;padding: 30rpx;box-sizing: border-box;border-radius: 10rpx;box-shadow: 0 0 10rpx 0 #2a3b81;}
.hr .detail,.hr image{display: table-cell;}
.hr .detail{padding-right: 30rpx;position: relative;}
.hr image{width: 180rpx;height: 180rpx;border-radius: 108rpx;}
.hr .title{font-weight: bold;color: white;font-size: 1.2em;margin-bottom: 20rpx;display: block;}
.footer-text{position: absolute;bottom: 0;font-size: 16rpx;}
.footer-left{left: 0;}
.footer-right{right: 30rpx;}
.yanyi{display: flex;flex-direction: row;justify-content: baseline;flex-wrap: wrap;}
.yanyi .item{width: 310rpx;margin: 20rpx;display: inline-block;}
.yanyi .item image{height: 220rpx;box-shadow: 0 0 10rpx 0 #2a3b81;}
.yanyi .title{color: white;width: 100%;overflow: hidden;text-overflow: ellipsis;white-space: nowrap;}
.demand-warp{background-color: #181e50;border-radius: 0 0 20rpx 20rpx;display: flex;justify-content: baseline;flex-direction: row;flex-wrap: nowrap;width: 100%;white-space: nowrap;}
.demand-warp .item{width: 240rpx;background-color: #0d153a;border-radius: 20rpx;margin: 20rpx 10rpx;
padding-bottom: 20rpx;display: inline-block;white-space: normal;}
.demand-warp .item::before{content: "";display: table;}
.demand-warp .headImg{width: 64rpx;height: 64rpx;display: inline-block;}
.demand-warp ._title{font-size: 20rpx;}
.demand-con{margin: 0 20rpx;}
.demand-warp .describe{font-size: 20rpx;border-radius: 20rpx;background: #2a3b81;display: block;padding: 10rpx;color: #ccc;}
.demand-con ._title{padding-top: 20rpx;display: inline-block;}
.news-warp{background: #181e50;padding: 20rpx 0;}
.news-warp .item{display: flex;justify-content: center;align-items: center;background: #0c0f30;margin-bottom: 4rpx;}
.news-img,.news-con{display: table-cell;}
.news-con {width: 70%;padding: 30rpx;}
.news-con .describe{display: block;margin: 20rpx 0;}
.news-con .icon{display: inline-block;vertical-align: middle;margin-right: 50rpx;}
.news-con .icon image{width: 30rpx;height: 30rpx;display: inline-block;vertical-align: text-top;margin-right: 10rpx;}
.news-img{width: 180rpx;height: 180rpx;}

.ad-warp .item{width: 115rpx;height: 115rpx;margin: 30rpx;display: inline-block;}


