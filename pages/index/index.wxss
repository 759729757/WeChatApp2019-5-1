@import "../../font.wxss"; 
page{padding-bottom: 100rpx;font-family: -apple-system,BlinkMacSystemFont,SF UI Text,Helvetica Neue,PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Microsoft YaHei,Arial,sans-serif;}
page{font-family: "pinfang";}
.swiper{height: 440rpx;width: 100%;}
.swiper image{width: 100%;height: 100%;}
.banner{position: relative;color: white;}
.ban-text,.ban-title{position: absolute;left: 40rpx;top: 42%;font-weight: bold;font-size: 40rpx}
.ban-text{top: calc(42% + 1.4em);width: calc(100% - 80rpx);}
.companyLogo{width: 100rpx;height: 50rpx;vertical-align: middle;}
.part-search .text-warp{background-color: #192079;border-top-left-radius: 50rpx;font-family: '-apple-system,BlinkMacSystemFont,SF UI Text,Helvetica Neue,PingFang SC,Hiragino Sans GB,Microsoft YaHei UI,Microsoft YaHei,Arial,sans-serif';border-bottom-left-radius: 50rpx;color: white;font-weight:bold;padding-left: 1em;width: 30%;}
.search{width: 50%;}
.search .input-item{background-color: #1E2887;border-top-right-radius: 60rpx;border-bottom-right-radius: 60rpx;}
.table-cell.search{border-top-right-radius: 60rpx;border-bottom-right-radius: 60rpx;}
.input-item input{background: #fff;border-radius: 50rpx;padding-left: 1em;color: #4E578B;height: 50rpx;padding-right: 80rpx;font-size: 18rpx;}
.input-item input + .icon-search{right: 0;background-color: #EBC682;border-radius: 50rpx;top: 0;width: 80rpx;height: 52rpx;z-index: 99;padding: 10rpx 20rpx;box-sizing: border-box;}
.scroll-view{padding: 0 0 40rpx 0;}
.scroll-view .item:first-child{margin-left: 40rpx;}
.picker .icon{margin-right: 5rpx;}
.pull-right .text-content{color: #fff;}

/* 推荐供应商 */
.gongying .headImg{width: 136rpx;height: 136rpx;margin-bottom: 0rpx;box-sizing: border-box;border: 3px solid #212C9A;}
.gongying .item{margin-right: 40rpx;}
.gongying .text-content{font-size: 20rpx;}

/* 影视制作 */
.yingshi .bigPic{width: 55%;height: 360rpx;border-top-left-radius: 30rpx;border-bottom-left-radius: 30rpx;border:16rpx #212C9A solid;border-right-width: 0;box-sizing: border-box; }
.yingshi .detail{width: 45%;padding-right: 20rpx;} 
.flex.yingshi{align-items: flex-start;}
.flex.part-video{align-items: flex-end;}
.part-video{padding-bottom: 40rpx;}
.part-video .item{background-color: #212C9A;border-radius: 10rpx;padding: 20rpx;position: relative;margin-right: 20rpx;transition: all .3s;}

.part-video .text-detail{max-width: 220rpx;font-size: 24rpx;}

.part-video .add{position: absolute;left: 20rpx;bottom: -15rpx;width: 30rpx;height: 30rpx;background-color: white;border-radius: 30rpx;}
.part-video .item.active{background: white;}
.part-video .item .text-detail{display: none;}
.part-video .item.active .text-more{display: none;}
.part-video .item.active .text-detail{display: block;}
.part-video .item.active view{color: #24294C;}

/* 媒体资源 */ 
.media-warp .item{width: 300rpx;background-color: #212C9A;margin-right: 40rpx;}
.media-warp .item image{height: 340rpx;}
/* .media-warp .item:first-child{margin-left:40rpx;} */

/* 人力资源 */
.part-hr-warp{position: relative;overflow: hidden;zoom: 1;}
.part-hr-warp.item-3{width:31.333%;margin: 0 1%;}
.content-warp+.part-hr{padding: 34rpx 25rpx;}
.part-hr-warp .item{position: relative;background: #212C9A;padding: 30rpx 20rpx;border-radius: 40rpx;margin: 20rpx 0;}
.part-hr-warp .item .headImg{margin-right: 0;width: 60rpx;height: 60rpx;}
.part-hr-warp .active{background: #fff;}
.part-hr-warp .active .title{color: #1E2887;}
/* .part-hr-warp .item .text-content{} */

/* 演绎资源 */
.part-ziyuan .item{position: relative;width: 336rpx;height: 336rpx;}
.part-ziyuan .item image{width: 100%;height: 100%;}
.part-ziyuan .item .detail{position: absolute;right: 20rpx;top: 20rpx;color: rgba(255,255,255,.8);}
.part-ziyuan-warp{margin-top: 50rpx;}
.part-ziyuan .flex{justify-content: center;}
.part-ziyuan .item2{height: 672rpx;}

/* 工程搭建 */
.engine-warp{height: 400rpx;overflow:visible;}
.engine-item image{overflow: visible;}
.engine-item{width: 50%;height: 400rpx;padding: 40rpx;padding-left: 60rpx;box-sizing: border-box;
transition: padding .35s;}
.engine-item.active{padding: 0;}
.stripe.engine{background-position-y: -60rpx;background-repeat: repeat-x; position: relative;padding-bottom: 100rpx;}
.engine-warp .detail{position: absolute;left: 80rpx;top: 60rpx;color: rgba(255,255,255,.8);}
.engine-warp .text-btn{margin-top: 160rpx;}

.engine-item.active .detail{left: 40rpx;top: 40rpx;}
.engine-item.active .text-btn{margin-top: 200rpx;}

.engine{padding: 0 30rpx;}
.engine .item-5{padding: 10rpx;box-sizing: border-box;}
.engine .item-5 image{height: 350rpx;}

.dot-warp{position: absolute;left: 50%;bottom: 50rpx;width: 50%;text-align: center;}
.dot{width: 12rpx;height: 12rpx;transition: all .3s;background: #192079;border-radius: 100%;display: inline-block;margin: 0 10rpx;}
.dot.active{background: #CCBC88;}

/* 快速咨询 */
.information{width: 100%;}
.information .item{padding: 20rpx 40rpx;margin: 20rpx 0;display: table;width: 100%;box-sizing: border-box;}
.information .pic{width: 200rpx;height: 200rpx;}
.information .table-cell{vertical-align:middle;}
.information .text-content{height:3.6em;overflow: hidden;}
.information .content{padding-left: 30rpx;position: relative;box-sizing: border-box;height: 200rpx;
  display: flex;flex-direction: column;justify-content: space-between;}
.information .content view{max-width: 100%;}
.information .badge{position: absolute;color: rgba(255,255,255,.45);left: 10rpx;top: 10rpx;font-size: 20rpx;}
.information .text-normal{color: white;}

.active .content{background: white;}
.active .text-normal{color: #24294C;}
.active .text-content,.information .badge{color: #4E578B;}

/* 项目需求 */
.project .pic{width: 300rpx;height: 400rpx;}
.project .small{display: inline-block;vertical-align: middle;font-size:20rpx;}
.project .flex-col{justify-content: start;height: 400rpx;}
.project .flex-col .title{margin: 20rpx 0;}
.project .text-normal{color: white;}
.project .content-warp-full{padding: 40rpx 0;padding-right: 40rpx;box-sizing: border-box;}
.project .text-md{font-size: 20rpx;}
.project .text-md{font-weight: bold;}
.swiper.project{padding-bottom: 40rpx;}

/* 战略伙伴 */
.part-partner .item{background: #212C9A;width: 280rpx;overflow: hidden;height: 410rpx;text-align: center;margin-right: 20rpx;}
.part-partner .text-content{font-size: 24rpx;}
.part-partner .headImg{width: 150rpx;height: 150rpx;margin: 30rpx;box-sizing: border-box;border: 6px #1E2887 solid;}
.part-partner .btn-circle{background-color: #1E2887;border: none;padding: 15rpx 30rpx;}



