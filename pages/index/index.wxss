
.swiper{height: 440rpx;width: 100%;}
.swiper image{width: 100%;height: 100%;}
.banner{position: relative;color: white;}
.ban-text,.ban-title{position: absolute;left: 40rpx;top: 42%;font-weight: bold;font-size: 40rpx}
.ban-text{top: calc(42% + 1.4em);width: calc(100% - 80rpx);}
.companyLogo{width: 100rpx;height: 50rpx;vertical-align: middle;}
.part-search .text-warp{background-color: #1E2887;border-top-left-radius: 50rpx;border-bottom-left-radius: 50rpx;color: white;font-weight:bold;padding-left: 1em;width: 7em;}
.search{width: 280rpx;}
.search .input-item{background-color: #1E2887;}
.input-item input{background: #fff;border-radius: 50rpx;padding-left: 1em;color: #4E578B;height: 50rpx;padding-right: 80rpx;font-size: 18rpx;}
.input-item input + .icon-search{right: 0;background-color: #EBC682;border-radius: 50rpx;top: 0;width: 80rpx;height: 52rpx;z-index: 99;padding: 10rpx 20rpx;box-sizing: border-box;}


/* 共有的 */
.part-title{color: white;padding: 10rpx 0;display: block;font-size: 36rpx;}
.small{color: rgba(255,255,255,.2);display: block;font-weight: bold;}
.part-title+.small{margin-top: -10rpx;}
.text-more,.text-detail{color: #CCBC88;}
.input-item input + .icon-search{margin-right: 0;}

/* 推荐供应商 */
.gongying .headImg{width: 132rpx;height: 132rpx;margin-bottom: 0rpx;border: 2px solid #212C9A;}
.gongying .item{margin-right: 40rpx;}
.gongying .item:last-child{margin-right: 0;}
.gongying .text-content{font-size: 20rpx;}

/* 影视制作 */
.yingshi .bigPic{width: 60%;height: 360rpx;border-top-right-radius: 30rpx;border-bottom-right-radius: 30rpx;border:16rpx #212C9A solid;border-left-width: 0;box-sizing: border-box; }
.yingshi .detail{width: 40%;} 
.flex.yingshi{align-items: flex-start;}
.flex.part-video{align-items: flex-end;}
.part-video{padding-bottom: 80rpx;}
.part-video .item{background-color: #212C9A;border-radius: 10rpx;padding: 20rpx;position: relative;margin-right: 20rpx;transition: all .3s;}
.part-video .item:last-child{margin-right:0;}

.part-video .text-detail{max-width: 220rpx;font-size: 24rpx;}

.part-video .add{position: absolute;left: 20rpx;bottom: -15rpx;width: 30rpx;height: 30rpx;background-color: white;border-radius: 30rpx;}
.part-video .item.active{background: white;}
.part-video .item .text-detail{display: none;}
.part-video .item.active .text-more{display: none;}
.part-video .item.active .text-detail{display: block;}
.part-video .item.active view{color: #24294C;}

/* 媒体资源 */
.media-warp .item{width: 300rpx;background-color: #212C9A;margin-right: 40rpx;}
.media-warp .item image{height: 340rpx;}
.media-warp .item:last-child{margin-right:0;}

/* 人力资源 */
.part-hr.scroll-view{justify-content: flex-end;align-items: flex-end;}
.part-hr .item{background-color: #212C9A;width: 220rpx;padding: 20rpx;padding-top: 40rpx;box-sizing: border-box;position: relative;overflow: visible;margin: 40rpx 0;margin-right: 40rpx;vertical-align: text-bottom;}
.part-hr .item:last-child{margin-right: 0;}

.part-hr .item.active{background: white;color:#24294C;width: 270rpx;height: 200rpx;}
.part-hr .item.active .headImg{width: 60rpx;height: 60rpx;border-radius:60rpx;left: 30rpx;top: -30rpx;}
.part-hr .item.active .title ,.part-hr .item.active .text-content{color:#24294C; }
.part-hr .item.active .headImg{border: white 4rpx solid;}
.part-hr .item .headImg{position: absolute;width: 40rpx;height: 40rpx;border-radius: 40rpx;left: 20rpx;top: -20rpx;}
.part-hr .text-content{overflow: hidden;display: block;}

/* 演绎资源 */
.part-ziyuan .item{position: relative;width: 336rpx;height: 336rpx;}
.part-ziyuan .item image{width: 100%;height: 336rpx;}
.part-ziyuan .item .detail{position: absolute;left: 40rpx;top: 150rpx;color: rgba(255,255,255,.8);}
.part-ziyuan .flex{justify-content: center;}


/* 工程搭建 */
.engine-warp{height: 400rpx;overflow:visible;}
.engine-item image{overflow: visible;}
.engine-item{width: 50%;height: 400rpx;padding: 40rpx;padding-left: 60rpx;box-sizing: border-box;
transition: padding .35s;}
.engine-item.active{padding: 0;}
.stripe.engine{background-position-y: -60rpx;background-repeat: repeat-x; position: relative;padding-bottom: 100rpx;}
.engine-warp .detail{position: absolute;left: 80rpx;top: 60rpx;color: rgba(255,255,255,.8);}
.engine-warp .text-btn{margin-top: 160rpx;}

.engine-item.active .detail{left: 40rpx;top: 40rpx;}
.engine-item.active .text-btn{margin-top: 200rpx;}

.dot-warp{position: absolute;left: 50%;bottom: 50rpx;width: 50%;text-align: center;}
.dot{width: 12rpx;height: 12rpx;transition: all .3s;background: #192079;border-radius: 100%;display: inline-block;margin: 0 10rpx;}
.dot.active{background: #CCBC88;}

/* 快速咨询 */
.information{width: 70%;float: right;}
.information .pic{width: 120rpx;height: 120rpx;}
.information .table-cell{vertical-align:middle;}
.information .content{padding-left: 30rpx;position: relative;border-bottom: solid 1px #CCBC88;width: 360rpx;box-sizing: border-box;}
.information .badge{position: absolute;color: rgba(255,255,255,.45);left: 10rpx;top: 10rpx;font-size: 20rpx;}
.information .text-normal{color: white;}

.active .content{background: white;}
.active .text-normal{color: #24294C;}
.active .text-content,.information .badge{color: #4E578B;}

/* 项目需求 */
.project .pic{width: 300rpx;height: 400rpx;}
.project .small{display: inline-block;vertical-align: middle;font-size:18rpx;}
.project .flex-col{justify-content: space-around;height: 400rpx;}
.project .text-normal{color: white;}
.project .content-warp-full{padding: 40rpx 0;padding-right: 40rpx;box-sizing: border-box;}
.project .text-md{font-size: 20rpx;}
.project .text-md{font-weight: bold;}

/* 战略伙伴 */
.part-partner .item{background: #212C9A;width: 280rpx;height: 410rpx;text-align: center;margin-right: 40rpx;}
.part-partner .item:last-child{margin-right: 0;}
.part-partner .text-content{font-size: 24rpx;}
.part-partner .headImg{width: 150rpx;height: 150rpx;margin: 30rpx;}
.part-partner .btn-circle{background-color: #1E2887;border: none;padding: 15rpx 30rpx;}



